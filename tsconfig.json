{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["DOM"],
    "allowJs": false,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
